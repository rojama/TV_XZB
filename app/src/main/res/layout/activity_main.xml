<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1.6"
        android:orientation="horizontal"
        android:paddingLeft="35dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/home_logo" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:color/transparent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <ImageButton
            android:id="@+id/home_b1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:focusableInTouchMode="true"
            android:src="@drawable/home_b1" />

        <ImageButton
            android:id="@+id/home_b2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:focusableInTouchMode="true"
            android:src="@drawable/home_b2" />

        <ImageButton
            android:id="@+id/home_b3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:focusableInTouchMode="true"
            android:src="@drawable/home_b3" />

        <ImageButton
            android:id="@+id/home_b_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:focusableInTouchMode="true"
            android:src="@drawable/home_b_setting" />

        <ImageButton
            android:id="@+id/home_b_my"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:focusableInTouchMode="true"
            android:src="@drawable/home_b_my" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:src="@android:color/transparent" />

        <ImageButton
            android:id="@+id/home_b_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#00000000"
            android:focusableInTouchMode="true"
            android:src="@drawable/home_b_login" />

        <ImageButton
            android:id="@+id/home_b_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#00000000"
            android:focusableInTouchMode="true"
            android:src="@drawable/home_b_collect" />

        <ImageButton
            android:id="@+id/home_b_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#00000000"
            android:focusableInTouchMode="true"
            android:src="@drawable/home_b_search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:layout_weight="6"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageButton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/left"
            android:visibility="visible" />

        <Gallery
            android:id="@+id/typeGallery"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1"
            android:gravity="bottom"
            android:spacing="25dp" />

        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/right"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/home_title" />

</LinearLayout>